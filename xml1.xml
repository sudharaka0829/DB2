<zabbix_export>
  <version>5.0</version>
  <groups>
    <group>
      <name>Templates/DB</name>
    </group>
  </groups>
  <templates>
    <template>
      <template>Template DB Bufferpool</template>
      <name>Template DB Bufferpool</name>
      <groups>
        <group>
          <name>Templates/DB</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>Bufferpool Statistics</name>
        </application>
      </applications>
      <items>
        <item>
          <name>Bufferpool Total Hit Ratio</name>
          <type>0</type>
          <key>bufferpool.totalhit[{#BUFFERPOOL}]</key>
          <value_type>0</value_type>
          <units>%</units>
          <applications>
            <application>
              <name>Bufferpool Statistics</name>
            </application>
          </applications>
        </item>
        <item>
          <name>Bufferpool Index Hit Ratio</name>
          <type>0</type>
          <key>bufferpool.idxhit[{#BUFFERPOOL}]</key>
          <value_type>0</value_type>
          <units>%</units>
          <applications>
            <application>
              <name>Bufferpool Statistics</name>
            </application>
          </applications>
        </item>
      </items>
      <discovery_rules>
        <discovery_rule>
          <name>Bufferpool Discovery</name>
          <key>bufferpool.discovery</key>
          <item_prototypes>
            <item_prototype>
              <name>Bufferpool Total Hit Ratio {#BUFFERPOOL}</name>
              <type>0</type>
              <key>bufferpool.totalhit[{#BUFFERPOOL}]</key>
              <value_type>0</value_type>
              <units>%</units>
            </item_prototype>
            <item_prototype>
              <name>Bufferpool Index Hit Ratio {#BUFFERPOOL}</name>
              <type>0</type>
              <key>bufferpool.idxhit[{#BUFFERPOOL}]</key>
              <value_type>0</value_type>
              <units>%</units>
            </item_prototype>
          </item_prototypes>
        </discovery_rule>
      </discovery_rules>
      <triggers>
        <trigger>
          <expression>{Template DB Bufferpool:bufferpool.totalhit[{#BUFFERPOOL}].last()}<95</expression>
          <name>Low Total Hit Ratio on {#BUFFERPOOL}</name>
          <priority>4</priority>
        </trigger>
        <trigger>
          <expression>{Template DB Bufferpool:bufferpool.idxhit[{#BUFFERPOOL}].last()}<95</expression>
          <name>Low Index Hit Ratio on {#BUFFERPOOL}</name>
          <priority>4</priority>
        </trigger>
      </triggers>
    </template>
  </templates>
</zabbix_export>
