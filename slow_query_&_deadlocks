db2pd -db <database_name> -locks show detail | grep '^0x' | wc -l

#!/bin/bash

# Switch to the db2inst1 user and define functions
su - db2inst1 << 'EOF' | grep -v 'Last'
# DB2 connection details
DB_USER="db2inst1"
DB_PASS="abcd1234"
DB_NAME="pegadb"

# Function to execute DB2 queries
execute_db2_query() {
    db2 connect to $DB_NAME > /dev/null 2>&1
    db2 -x "$1"
}

# Function to get deadlock count
get_deadlock_count() {
    execute_db2_query "SELECT COUNT(*) AS deadlock_count FROM SYSIBMADM.MON_LOCKWAIT WHERE LOCK_WAIT_MODE = 'X' AND DEADLOCK_ID IS NOT NULL"
}

# Call function to get deadlock count
deadlock_count=$(get_deadlock_count)

# Output deadlock count
echo "Deadlock count: $deadlock_count"

EOF
